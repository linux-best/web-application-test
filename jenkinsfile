pipeline {
    agent any

    environment {
        REPO_PROJECT = 'https://github.com/linux-best/web-application-test/'
    }

    stages {
        stage("Checkout SCM") {
            steps {
                echo "Checking out the ${env.REPO_PROJECT} from SCM"
                git branch: 'main', url: "${env.REPO_PROJECT}"
            }
        }
        stage("Build") {
            steps {
                sh "pwd"
                sh "sudo pip install -r requirments.txt"
            }
        }
        stage("Test") {
            steps {
                sh "pwd"
                sh "pytest app_tests/login_test.py --suppress-no-test-exit-code"
            }
        }
        stage("Deploy") {
            steps {
                echo "Application Ready to Deploy the (peneration test)"
                sh "sudo python3 app_tests/login_test.py"
            }
        }
        stage("peneration_test") {
            steps {
                echo "Application Ready to Deploy the (peneration test)"
                // run the pen build
            }
        }
    }
    post {
        success {
            echo "Done !"
            script {
                emailext(
                    subject: "Build ${env.BUILD_NUMBER} of ${env.JOB_NAME} was successful",
                    body: """
                    Check the detals at ${env.BUILD_URL}""",
                    to: "amirmahdifhp@gmail.com"
                )
            }
        } // email
        failure {
            echo "Fuck !!"
            script {
                emailext(
                    subject: "Build ${env.BUILD_NUMBER} of ${env.JOB_NAME} was failed",
                    body: """
                    Check the details at ${env.BUILD_URL}""",
                    to: "amirmahdifhp@gmail.com"
                )
            }
        } // email
    }
}
